<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_contact_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="16dp"

        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/image_contact_profile"
        android:layout_toRightOf="@+id/image_contact_profile"
        android:text="John Doe"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_contact_name"
        android:layout_alignStart="@+id/text_contact_name"
        android:layout_below="@+id/text_contact_name"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:text="John Doe"
        android:textSize="15sp" />
</RelativeLayout>